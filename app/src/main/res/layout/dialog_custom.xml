<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Berapa lama kamu akan melakukan latihan ini?"
        android:id="@+id/textViewTime"
        android:textSize="20sp"
        android:fontFamily="@font/roboto"
        android:textColor="#000000"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="2"
        android:inputType="number"
        android:layout_below="@+id/textViewTime"
        android:id="@+id/menit"
        android:maxLength="2"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="menit"
        android:textSize="20sp"
        android:fontFamily="@font/roboto"
        android:textColor="#000000"
        android:layout_below="@+id/textViewTime"
        android:layout_toRightOf="@id/menit"
        android:layout_marginTop="25dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/textViewDays"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/menit"
        android:text="Pada hari apa kamu akan menjadwal latihan ini?"
        android:textSize="20dp"
        android:fontFamily="@font/roboto"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>
    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewDays"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/spinner"
        android:gravity="center_horizontal"
        >
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Tambahkan"
        android:id="@+id/tambahkanBtn"
        android:fontFamily="@font/roboto"
        android:textColor="#000000"
        android:background="#1AF423"
        android:layout_below="@+id/spinner"
        android:layout_marginTop="20dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Batal"
        android:id="@+id/batalBtn"
        android:fontFamily="@font/roboto"
        android:textColor="#FFFFFF"
        android:background="#FB336F"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/spinner"
        android:layout_marginTop="20dp"/>
    </LinearLayout>
</RelativeLayout>